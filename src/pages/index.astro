	}
	.terminal-link a {
		color: var(--main-color);
		font-size: 15px;
		display: inline;
		font-family: "Inter-Medium";
	}
	.hi-txt {
		font-size: 24px;
		margin-top: 40px;
		opacity: 0.9;
	}
	.about-txt {
		margin-top: 30px;
		max-width: 580px;
		line-height: 34px;
		font-size: 15px;
		color: #ffffffd0;
	}
	.about-txt span {
		color: var(--main-color);
	}
	.links-group {
		margin-top: 40px;
		display: flex;
		gap: 2rem;
	}
	.links-group a {
		font-size: 15px;
		color: #ffffff88;
		text-decoration: none;
	}
	.links-group a:hover {
		color: var(--main-color);
	}
	.portfolio {
		margin-top: 10em;
	}
	.portfolio .project-titles {
		font-size: 20px;
		opacity: 0.9;
		margin-bottom: 30px;
	}
	.portfolio .selected-items {
		margin-top: 60px;
	}

	.portfolio .projects {
		display: grid;
		gap: 25px;
	}
</style>
