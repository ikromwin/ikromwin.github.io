---
import Layout from "../layouts/Layout.astro";
import ProjectItem from "../components/ProjectItem.astro";
import { currentProjects, selectedProjects } from "../db/db";
import { msgs, TERMINAL_LINK } from "../db/msg";
---

<Layout title="Ikrom's Portfolio">
	<main>
		<div class="terminal-link">
			<a href={TERMINAL_LINK}>{msgs.cli_url_txt}</a>
		</div>

		<h1 class="hi-txt">{msgs.greeting_txt}</h1>
		<p class="about-txt" set:html={msgs.about_txt} />
		<hr />

		<ul class="skills-lists">
			{
				msgs.all_skills.map((s) => (
					<li>
						{s.title} {s.skills || null}
					</li>
				))
			}
		</ul>

		<div class="social-links">
			{
				msgs.social_links.map((link) => (
					<a href={link.href}>{link.title}</a>
				))
			}
		</div>

		<section class="portfolio">
			<div class="current-items">
				<h1 class="project-titles">Current projects</h1>
				<div class="projects">
					{
						currentProjects.map((item) => (
							<ProjectItem
								title={item.title}
								tools={item.tools}
								sourse={item.sourse}
								href={item.href}
							/>
						))
					}
				</div>
			</div>
			<div class="selected-items">
				<h1 class="project-titles">Selected projects</h1>
				<div class="projects">
					{
						selectedProjects.map((item) => (
							<ProjectItem
								title={item.title}
								tools={item.tools}
								sourse={item.sourse}
								href={item.href}
							/>
						))
					}
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		max-width: 900px;
		margin: 0 auto;
		padding: 1rem;
		padding-top: 5.5rem;
		padding-bottom: 4rem;
	}
	.terminal-link a {
		border: 1px dashed #ffffff3a;
		padding: 6px 10px;
		border-radius: 8px;
		background: -webkit-linear-gradient(45deg, #27dddd, #9482f9);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-size: 15px;
		display: inline;
		font-family: "Inter-Medium";
	}
	.terminal-link a:hover {
		border: 1px dashed #ffffffb3;
	}
	.hi-txt {
		font-size: 24px;
		margin-top: 40px;
		opacity: 0.9;
	}
	hr {
		opacity: 0.15;
	}
	.about-txt {
		margin-top: 30px;
		max-width: 590px;
		line-height: 34px;
		font-size: 15px;
		color: #ffffffc0;
	}
	.skills-lists {
		margin-left: 20px;
		padding-left: 0;
		line-height: 30px;
		/* list-style: none; */
		font-size: 15px;
		color: #ffffffc0;
	}
	.social-links {
		margin-top: 40px;
		display: flex;
		gap: 2rem;
	}
	.social-links a {
		font-size: 15px;
		color: #ffffffc0;
		text-decoration: none;
	}
	.social-links a:hover {
		color: var(--main-color);
	}
	.portfolio {
		margin-top: 10em;
	}
	.portfolio .project-titles {
		font-size: 20px;
		opacity: 0.9;
		margin-bottom: 30px;
	}
	.portfolio .selected-items {
		margin-top: 60px;
	}

	.portfolio .projects {
		display: grid;
		gap: 25px;
	}
</style>
